# .gitattributes for pyMediaManager
# See https://git-scm.com/docs/gitattributes

# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf diff=python
*.pyw text eol=lf diff=python
*.pyx text eol=lf diff=python
*.pxd text eol=lf diff=python
*.pxi text eol=lf diff=python

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# CI/CD
*.yml linguist-language=YAML
.github/**/*.yml linguist-language=YAML

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.pyc binary export-ignore
*.pyo binary export-ignore
*.pyd binary

# Image files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text

# Archive files
*.7z binary
*.gz binary
*.tar binary
*.zip binary

# Exclude files from export (git archive)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.vscode export-ignore
.editorconfig export-ignore
.pre-commit-config.yaml export-ignore
tests/ export-ignore
# Documentation files needed by Sphinx
# *.md export-ignore - commented out to allow CHANGELOG.md and CONTRIBUTING.md
README.md export-ignore
htmlcov/ export-ignore
.coverage export-ignore
.pytest_cache/ export-ignore
.mypy_cache/ export-ignore
.ruff_cache/ export-ignore

# Language statistics
*.py linguist-language=Python
*.md linguist-documentation
docs/** linguist-documentation
